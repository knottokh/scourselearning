<%= render partial: 'spree/admin/shared/course_tabs', locals: { current: :images } %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @object } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_image) %>
<% end %>
<%= @courseimage.viewable_id %>
<%= form_for [:admin, @course,@courseimage], html: { multipart: true } do |f| %>
  <fieldset data-hook="new_image">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_course_courseimages_url(@course), icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
