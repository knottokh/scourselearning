<% content_for :page_title do %>
  <%= link_to Spree.t(:courses), admin_courses_path %> /
  <%= @course.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_course_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_course_url(@course) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), spree.admin_course_courseimages_url(@course) %>
    <% end if can?(:admin, Spree::Image) && !@course.deleted? %>
  </ul>
<% end %>
